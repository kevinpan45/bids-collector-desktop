{
  "name": "bids-collector-desktop",
  "version": "0.0.1",
  "description": "BIDS Collector Desktop Application",
  "main": "electron/main.js",
  "homepage": "./",
  "author": {
    "name": "BIDS Collector Team",
    "email": "admin@bids-collector.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinpan45/bids-collector-desktop.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:build-all": "npm run build && electron-builder --win --mac --linux",
    "electron:build-win": "npm run build && electron-builder --win",
    "electron:build-mac": "npm run build && electron-builder --mac",
    "electron:build-linux": "npm run build && electron-builder --linux"
  },
  "devDependencies": {
    "@iconify/svelte": "^4.0.2",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "autoprefixer": "10.4.17",
    "concurrently": "^8.2.2",
    "daisyui": "^4.7.3",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "postcss": "8.4.35",
    "svelte": "^4.0.0",
    "svelte-time": "^0.8.2",
    "svelte-typeahead": "^4.4.1",
    "tailwindcss": "3.4.1",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "type": "module",
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.1.3",
    "axios": "1.9.0",
    "svelte-french-toast": "1.2.0"
  },
  "build": {
    "appId": "com.bids.collector.desktop",
    "productName": "BIDS Collector Desktop",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "electronDownload": {
      "mirror": "https://github.com/electron/electron/releases/"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable", 
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
